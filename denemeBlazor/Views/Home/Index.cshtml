                        <h2 class="text-gray-800 text-2xl font-bold">
                            <span class="inline-block h-5 border-l-3 border-red-600 mr-2"></span>Spor
                        </h2>
                    </div>
                    <div class="flex flex-row flex-wrap -mx-3">
                        @foreach (var haberler in Model)
                        {
                            if (haberler.CategoryId == (int)CategoryType.Spor)
                            {

                                <div class="flex-shrink max-w-full w-full sm:w-1/3 px-3 pb-3 pt-3 sm:pt-0 border-b-2 sm:border-b-0 border-dotted border-gray-100">
                                    <div class="flex flex-row sm:block hover-img">
                                        <a asp-action="Pages" asp-controller="Home" asp-route-id="@haberler.Id">
                                            <img class="max-w-full w-full mx-auto" src="~/src/Files/@haberler.MediaPath" alt="@haberler.Defination1">
                                        </a>
                                        <div class="py-0 sm:py-3 pl-3 sm:pl-0">
                                            <h3 class="text-lg font-bold leading-tight mb-2">
                                                <a asp-action="Page" asp-controller="Home" asp-route-id="@haberler.Id">@haberler.Title</a>
                                            </h3>
                                            <p class="hidden md:block text-gray-600 leading-tight mb-1">@haberler.Defination1</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
